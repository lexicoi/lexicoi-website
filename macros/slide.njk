{% macro jsSlide(obj) %}
  <div class="js-slide">
    <div class="d-flex align-items-center u-hero-v1__main" style="background-image: url({{
      obj.backgroundImage}});">
      <div class="container u-space-4-top u-space-5-top--md u-space-3-top--lg u-space-3-bottom">
        <div class="row">
          <div class="col-md-8 col-lg-6 position-relative">
            <h1 class="text-white display-4 font-size-48--md-down mb-0"
              data-scs-animation-in="fadeInUp"
              data-scs-animation-delay="200">
              {{ obj.primaryHeader | safe }}
            </h1>
          </div>
        </div>
      </div>
    </div>

    <div class="d-flex align-items-center bg-white u-hero-v1__secondary">
      <div class="container u-space-2">
        <div class="row">
          <div class="col-lg-4">
            <h3 class="h5 text-muted">
              <span class="d-block text-danger">{{ obj.secondaryHeader }}</span>
            </h3>
            <p class="mb-0">{{ obj.secondaryDescription }}</p>
          </div>
        </div>
      </div>

      <div class="w-100 h-100 d-none d-lg-inline-block u-hero-v1__last"
        style="background-color: {{ obj.tertiaryColor }}">
        <div class="u-hero-v1__last-inner">
          <h3 class="h5 text-white">
            <a href="google.com">
              <strong class="u-hero-v1__last-prev">{{ obj.tertiaryHeader }}</strong>
            </a>
          </h3>
          <p class="u-text-light mb-0">{{ obj.tertiaryDescription }}</p>
        </div>
      </div>
    </div>
  </div>
{% endmacro %}
